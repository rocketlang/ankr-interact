{
  "cli": {
    "version": ">= 10.0.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "simulator": true
      },
      "env": {
        "APP_ENV": "development"
      }
    },

    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "channel": "preview",
      "env": {
        "APP_ENV": "preview"
      }
    },

    "production": {
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "channel": "production",
      "env": {
        "APP_ENV": "production"
      }
    },

    "store": {
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease"
      },
      "ios": {
        "distribution": "store"
      },
      "channel": "production",
      "env": {
        "APP_ENV": "production"
      }
    },

    "fdroid": {
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "withoutCredentials": true
      },
      "distribution": "internal",
      "channel": "production",
      "env": {
        "APP_ENV": "production",
        "SELF_HOSTED": "true"
      }
    }
  },

  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./google-play-key.json",
        "track": "internal",
        "releaseStatus": "draft"
      },
      "ios": {
        "appleId": "hello@ankrlabs.in",
        "ascAppId": "ankr-interact",
        "appleTeamId": "ANKRLABS"
      }
    }
  }
}
