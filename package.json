{
  "name": "@ankr/interact",
  "version": "1.0.0",
  "description": "Open-source knowledge OS â€” Obsidian + Notion + NotebookLM + Google Classroom + Duolingo + Miro in one app",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/rocketlang/ankr-interact"
  },
  "homepage": "https://interact.ankrlabs.in",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist/",
    "src/bundles/",
    "src/config/",
    "BUNDLE-SPEC.md",
    "BUNDLE-SPEC-V2.md",
    "LICENSE",
    "README.md"
  ],
  "main": "./dist/server/index.js",
  "module": "./src/bundles/bundle-lib.ts",
  "exports": {
    ".": {
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    },
    "./bundles": {
      "import": "./dist/bundles/bundle-lib.js",
      "types": "./dist/bundles/bundle-lib.d.ts"
    },
    "./config": {
      "import": "./dist/config/features.js",
      "types": "./dist/config/features.d.ts"
    }
  },
  "keywords": [
    "obsidian-alternative",
    "notion-alternative",
    "lms",
    "knowledge-graph",
    "wiki",
    "flashcards",
    "spaced-repetition",
    "classroom",
    "whiteboard",
    "self-hosted",
    "offline-first",
    "open-source",
    "edtech"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "vite",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "start": "node dist/server/index.js",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "seed:demo": "tsx scripts/seed-demo.ts",
    "interact:validate": "tsx scripts/interact-validate-bundle.ts",
    "interact:bump": "tsx scripts/interact-bump-bundle.ts bump",
    "interact:diff": "tsx scripts/interact-bump-bundle.ts diff",
    "prepublishOnly": "npm run build",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run"
  },
  "engines": {
    "node": ">=20"
  }
}
